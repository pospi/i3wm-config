bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# move focused container to workspace
bindsym $wmod+Shift+Left move container to workspace prev, workspace prev
bindsym $wmod+Shift+Right move container to workspace next, workspace next
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

# move active workspace between windows
bindsym $wmod+Mod4+Left move workspace to output left
bindsym $wmod+Mod4+Right move workspace to output right

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
bindsym $mod+r mode "resize"
mode "resize" {
  # These bindings trigger as soon as you enter the resize mode

  # Pressing left will shrink the window’s width.
  # Pressing right will grow the window’s width.
  # Pressing up will shrink the window’s height.
  # Pressing down will grow the window’s height.
  #bindsym j resize shrink width 10 px or 10 ppt
  #bindsym k resize grow height 10 px or 10 ppt
  #bindsym l resize shrink height 10 px or 10 ppt
  #bindsym semicolon resize grow width 10 px or 10 ppt

  # same bindings, but for the arrow keys
  bindsym Left resize shrink width 10 px or 10 ppt
  bindsym Down resize grow height 10 px or 10 ppt
  bindsym Up resize shrink height 10 px or 10 ppt
  bindsym Right resize grow width 10 px or 10 ppt

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

# automated window floating by class
for_window [class="floatingWin"] floating enable,move position center
for_window [window_role="gnome-calculator"] floating enable
for_window [class="Peek"] floating enable,resize set 640 480,move position center

# system power & lock commands
set $mode_system System (p) perfmode, (l) lock, (e) logout, (s) suspend, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $HOME/.config/i3/i3exit.sh lock, mode "default"
    bindsym e exec --no-startup-id $HOME/.config/i3/i3exit.sh logout, mode "default"
    bindsym s exec --no-startup-id $HOME/.config/i3/i3exit.sh suspend, mode "default"
    #bindsym h exec --no-startup-id $HOME/.config/i3/i3exit.sh hibernate, mode "default"
    bindsym r exec --no-startup-id $HOME/.config/i3/i3exit.sh reboot, mode "default"
    bindsym Shift+s exec --no-startup-id $HOME/.config/i3/i3exit.sh shutdown, mode "default"

    # performance profile script
    bindsym p exec --no-startup-id $HOME/.config/i3/cpu-perf-change.sh, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Pause mode "$mode_system"
bindsym $mod+Delete mode "$mode_system"
bindsym $mod+l exec --no-startup-id $HOME/.config/i3/i3exit.sh lock, mode "default"

# peripherals
set $mode_peripherals Peripherals | (b)luetooth (v)ideo (s)ound
mode "$mode_peripherals" {
    bindsym b exec blueman-manager, mode "default"
    bindsym v exec arandr, mode "default"
    bindsym s exec pavucontrol, mode "default"
}
bindsym $mod+P mode "$mode_peripherals"

# Quick app launcher
set $mode_launcher Quicklaunch [1-0] | (C)ommunications
bindsym $mod+z mode "$mode_launcher"
mode "$mode_launcher" {
  bindsym Escape mode "default"
  bindsym Return mode "default"

  # most common apps
  bindsym 1 exec i3-sensible-terminal, mode "default"
  bindsym 2 exec nautilus, mode "default"
  bindsym 3 exec subl, mode "default"
  bindsym 4 exec firefox, mode "default"
  bindsym 5 exec rhythmbox, mode "default"

  # app groups
  bindsym C \
    workspace $ws8; \
    exec --no-startup-id i3-msg append_layout $HOME/.config/i3/workspace-comms.json; \
    exec i3-sensible-terminal; \
    exec signal-desktop; \
    exec slack; \
    exec $HOME/Downloads/Telegram/Telegram; \
    exec /opt/Mattermost/mattermost-desktop; \
    mode "default"
}

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
  status_command i3status -c $HOME/.config/i3/i3status.conf | $HOME/.config/i3/i3status.py
  mode dock
  #tray_output primary
  position bottom
}

# Set a background image (repeat after delay to be sure, X takes time to boot sometimes)
exec --no-startup-id sleep 1; nitrogen --set-auto $HOME/Pictures/wallpaper.png; sleep 5; nitrogen --set-auto $HOME/Pictures/wallpaper.png

# Load up a compositor so that WebGL & overlay apps (eg. Peek GIF recorder) work
exec_always --no-startup-id compton --opacity-rule '100:window_type = "dock" && class_g = "i3bar"' --config $HOME/.config/i3/compton.conf -b

# Init monitor config.
# Also requires a systemd service in case monitors change while off.
exec --no-startup-id $HOME/.config/i3/auto-monitorconf.sh
exec --no-startup-id xset +dpms dpms 0 0 $monitorDisableTimeout

# Auto-lock & suspend after idle timeout. Monitor disabled shortly beforehand via dpms.
exec_always --no-startup-id $HOME/.config/i3/i3-fs-standby-daemon.py
exec --no-startup-id \
  xautolock -notify 20 -notifier "$HOME/.config/i3/i3lock.sh notify" \
  -time $systemLockPrepareTimeout -locker "$HOME/.config/i3/i3lock.sh prepare" \
  -killtime $systemLockTimeout -killer "$HOME/.config/i3/i3lock.sh auto" \
  -detectsleep

# handles X input reassignments when certain devices detected
exec_always --no-startup-id $HOME/.config/i3/xinput-poll-daemon.sh

# Startup apps
exec --no-startup-id nm-applet
exec --no-startup-id encfs-manager
exec --no-startup-id megasync
exec --no-startup-id sleep 5; /opt/extras.ubuntu.com/indicator-brightness/indicator-brightness
exec --no-startup-id redshift-gtk
